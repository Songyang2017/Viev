.top-box{
  padding: 20rpx 25rpx;
  width: 100%;
  height: 550rpx;
  background: url(//wx4.sinaimg.cn/large/9b8e43a1ly1fu6kdnmp6zj20xc0kbdlk.jpg) no-repeat 0 0;
  background-size: cover;
  position: relative;
  z-index: -2;
}
.top-mask{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%; 
  background-color: rgba(0,0,0,.2);
  z-index: -1;
}

.title-city{
  color:rgba(255,255,255,.95);
  font-size: 40rpx;
}